# Solana Academy Platform â€” Environment Configuration
# Copy to .env.local and update values for your environment

# ===== Backend API =====
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===== Solana RPC Endpoints =====
NEXT_PUBLIC_SOLANA_RPC_URL=http://localhost:8899
NEXT_PUBLIC_SOLANA_RPC_URL_DEVNET=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_RPC_URL_MAINNET=https://api.mainnet-beta.solana.com

# Optional: Premium RPC Providers
# NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key_here
# NEXT_PUBLIC_QUICKNODE_RPC=https://your-node-url.quiknode.pro/

# ===== Wallet Configuration =====
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_WALLET_ADAPTERS=phantom,backpack,brave,solflare

# ===== Analytics & Monitoring (Optional) =====
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===== Feature Flags =====
NEXT_PUBLIC_ENABLE_WALLET_CONNECTION=false
NEXT_PUBLIC_ENABLE_ON_CHAIN_XP=false
NEXT_PUBLIC_ENABLE_LEADERBOARD=false

# ===== Build Environment =====
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=1.0.0
# ===== Sanity CMS =====
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-02-13
SANITY_API_TOKEN=your_api_token_here